<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <ImageView

        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/account"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="My Account"
            android:textStyle="italic|bold"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="Log Out"
            android:textStyle="italic|bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="Where do you \nwant to go ?"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <ScrollView

        android:id="@+id/verticalMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintVertical_bias="1.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="45dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/image"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripTitle1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Palestine"
                            android:textColor="#80000000 "

                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tripSubtitle1"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jerusalem"
                            android:textColor="#80000000 "
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tripMenu1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"

                        android:layout_marginEnd="20dp"
                        android:src="@drawable/img_7" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relative2"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_overlay"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/image2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripTitle2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Italy"
                            android:textColor="#80000000 "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tripSubtitle2"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Roma"
                            android:textColor="#80000000 "
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"

                        android:layout_marginEnd="20dp"
                        android:src="@drawable/img_8" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"

                app:cardElevation="2dp">


                <RelativeLayout
                    android:id="@+id/relative3"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_overlay"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/image4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spain"
                            android:textColor="#80000000 "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tripSubtitle3"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Madrid"
                            android:textColor="#80000000 "
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tripMenu3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"

                        android:layout_marginEnd="20dp"
                        android:src="@drawable/img_9" />
                    />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"

                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relative4"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_overlay"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/tripImage4"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_4" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/tripImage4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tripTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Russia"
                            android:textColor="#80000000  "
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tripSubtitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Moscow"
                            android:textColor="#80000000 "
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tripMenu4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="25dp"
                        android:src="@drawable/img_10" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:id="@+id/relative5"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_overlay"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_toEndOf="@id/image5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Japan"
                            android:textColor="#80000000 "

                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tokyo"
                            android:textColor="#80000000 "
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"

                        android:layout_marginEnd="20dp"
                        android:src="@drawable/img_11" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
